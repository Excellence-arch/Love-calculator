<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
  crossorigin="anonymous"
/>

<div class="container mt-5">
  <div class="row">
    <div class="col-6 container">
      <table class="table-striped border table shadow-lg">
        <thead>
          <tr>
            <td>First name</td>
            <td>Second name</td>
            <td>Score</td>
          </tr>
        </thead>
        <form action="/calculate" method="post">
          <tbody>
            <tr>
              <td>
                <input type="text" placeholder="Guy's name" name="firstname" />
              </td>
              <td>
                <input
                  type="text"
                  placeholder="Lady's name"
                  name="secondname"
                />
              </td>
              <td><%= newScore %> </td>
            </tr>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="3">
                <button type="submit" class="btn btn-info w-100">Click</button>
              </td>
            </tr>
          </tfoot>
        </form>
      </table>
      <form action="/logout" method="post">
        <button class="btn btn-danger">Logout</button>
      </form>
    </div>
  </div>
</div>
