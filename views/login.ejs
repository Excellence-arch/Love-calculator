<%- include("navbar") -%> 

<div class="container mt-5">
  <div class="row">
    <div class="col-6 container">
      <form action="/login" method="post">
        <input type="text" name="email" placeholder="Email" class="form-control w-100 my-2" />
        <input type="password" name="password" placeholder="Password" class="form-control w-100 my-2" />
        <button type="submit" class="btn btn-info">Register</button>
      </form>
      <p> Don't have an account? <a href="/register">Register</a></p>
    </div>
  </div>
</div>